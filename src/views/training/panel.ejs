<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel de Inicio</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="flex bg-gray-100">

  <%- include('../partials/sidebar') %>

  <main class="flex-grow p-6">
    <div class="container mx-auto">
      <h1 class="text-2xl font-bold text-blue-600 mb-6">Panel de Inicio</h1>

      <!-- Tarjetas -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Tarjeta 1 -->
        <a href="/training/capacitaciones" class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl hover:bg-blue-50 transition">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-blue-500 text-white flex items-center justify-center rounded-full">
              <i class="fas fa-users fa-lg"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-bold text-gray-800">Gestión de Capacitaciones</h3>
              <p class="text-sm text-gray-600">Administra las capacitaciones</p>
            </div>
          </div>
        </a>

        <!-- Tarjeta 2 -->
        <a href="/training/capacitaciones" class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl hover:bg-green-50 transition">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-green-500 text-white flex items-center justify-center rounded-full">
              <i class="fas fa-chart-line fa-lg"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-bold text-gray-800">DNF</h3>
              <p class="text-sm text-gray-600">Consulta estadísticas y datos</p>
            </div>
          </div>
        </a>

        <!-- Tarjeta 3 -->
        <a href="#" class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl hover:bg-yellow-50 transition">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-yellow-500 text-white flex items-center justify-center rounded-full">
                <i class="fa-solid fa-list"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-bold text-gray-800">Catalogos</h3>
              <p class="text-sm text-gray-600">Catalogos del Modulo</p>
            </div>
          </div>
        </a>

        <a href="/training/capacitaciones" class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl hover:bg-blue-50 transition">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-red-500 text-white flex items-center justify-center rounded-full">
                <i class="fa-solid fa-file-lines"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-bold text-gray-800">Evaluaciones</h3>
              <p class="text-sm text-gray-600">Administra las evaluaciones</p>
            </div>
          </div>
        </a>

        <!-- Tarjeta 2 -->
        <a href="/training/capacitaciones" class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl hover:bg-green-50 transition">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-slate-500 text-white flex items-center justify-center rounded-full">
                <i class="fa-solid fa-people-arrows"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-bold text-gray-800">Plan de Capacitacion</h3>
              <p class="text-sm text-gray-600">Consulta el plan de Capacitacion</p>
            </div>
          </div>
        </a>

        <!-- Tarjeta 3 -->
        <a href="#" class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl hover:bg-yellow-50 transition">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-lime-500 text-white flex items-center justify-center rounded-full">
                <i class="fa-regular fa-folder-open"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-bold text-gray-800">Constancias</h3>
              <p class="text-sm text-gray-600">Consultar constancias</p>
            </div>
          </div>
        </a>
        <a href="#" class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl hover:bg-yellow-50 transition">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-indigo-700 text-white flex items-center justify-center rounded-full">
                <i class="fa-solid fa-signal"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-bold text-gray-800">Informes</h3>
              <p class="text-sm text-gray-600">Consulta Informes</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </main>
</body>
</html>
